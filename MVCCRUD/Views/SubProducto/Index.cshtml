@model IEnumerable<MVCCRUD.Models.SubProducto>

@{
    ViewData["Title"] = "Index";
}

<script src="https://kit.fontawesome.com/7b4311b411.js" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<h1>Index</h1>

<input class="form-control" id="myInput" type="text" placeholder="Search..">




<div class="row">
    <div class="col-sm-12">
        <div class="card border">
            <div class="card-header">
                <h3> Lista de productos</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellpadding="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdStock)
            </th>
            <th>
                Nombre del Sub Producto
            </th>
            <th>
                Descripcion
            </th>
            <th>
                id producto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="myInput">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreSubProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionSubProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProductoNavigation.IdProducto)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.IdSubProducto"><i class="fa-regular fa-pen-to-square"></i> Edit</a> |
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdSubProducto"> <i class="fa-solid fa-delete-left"></i>Delete</a>
               
            </td>
        </tr>
}
    </tbody>
</table>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="float-right">
                                <p>
                                    <a asp-action="Create" class="btn btn-outline-success"><i class="fa-solid fa-circle-plus"></i> Agregar</a>

                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
